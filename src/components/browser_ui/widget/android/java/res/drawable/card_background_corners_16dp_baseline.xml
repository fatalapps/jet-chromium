<!-- Default card background that has hover / focus / press state without ripple.-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Base background layer. This is always visible. -->
  <item android:id="@+id/card_background_base">
    <shape android:shape="rectangle">
      <solid android:color="@color/gm3_baseline_surface_container" />
      <corners android:radius="@dimen/card_rounded_corner_radius" />
    </shape>
  </item>

  <!-- State overlay layer that responded to hover / focus / etc. -->
  <item android:id="@+id/card_background_state_overlay">
    <shape android:shape="rectangle">
      <solid android:color="@color/card_hover_press_overlay_color_list_baseline" />
      <corners android:radius="@dimen/card_rounded_corner_radius" />
    </shape>
  </item>

</layer-list>
