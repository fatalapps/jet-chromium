<androidx.constraintlayout.widget.ConstraintSet
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Constraint
        android:id="@+id/rich_radio_button_icon_container"
        android:layout_width="@dimen/rich_radio_button_horizontal_icon_container_size"
        android:layout_height="@dimen/rich_radio_button_horizontal_icon_container_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rich_radio_button_text_container"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="@dimen/rich_radio_button_icon_margin_end" />

    <Constraint
        android:id="@+id/rich_radio_button_text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rich_radio_button_icon_container"
        app:layout_constraintEnd_toStartOf="@+id/rich_radio_button_radio_button"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp" />

    <Constraint
        android:id="@+id/rich_radio_button_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rich_radio_button_text_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginStart="@dimen/rich_radio_button_radio_button_margin_start" />

</androidx.constraintlayout.widget.ConstraintSet>