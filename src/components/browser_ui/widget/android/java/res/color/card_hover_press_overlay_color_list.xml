<!-- Default color state list paired with card that should have hover / press
     state, while the focus state needs a outline highlight. -->
<selector
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  tools:ignore="UnusedResources">
  <!-- Pressed state: 12% alpha of colorOnSurface -->
  <item android:state_pressed="true"
      android:color="?attr/colorOnSurface"
      android:alpha="0.12" />

  <!-- Hovered state: 8% alpha of colorOnSurface -->
  <item android:state_hovered="true"
      android:color="?attr/colorOnSurface"
      android:alpha="0.08" />

  <!-- Focused state: transparent, will be handled by external outline -->
  <!-- Default state: transparent -->
  <item android:color="@android:color/transparent" />
</selector>