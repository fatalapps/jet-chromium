<org.chromium.ui.listmenu.ListMenuItemWithSubmenuView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    style="@style/ListMenuItemStyle" >

    <org.chromium.ui.widget.ChromeImageView
        android:id="@+id/menu_item_icon"
        android:duplicateParentState="true"
        android:importantForAccessibility="no"
        android:visibility="gone"
        style="@style/ListMenuItemIconStyle.Start" />

    <TextView
        android:id="@+id/menu_row_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TextAppearance.ListMenuItem" />

    <ImageView
        android:id="@+id/submenu_arrow"
        android:src="@drawable/outline_chevron_right_24dp"
        android:importantForAccessibility="no"
        android:layout_width="@dimen/list_menu_item_icon_size"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent" />
</org.chromium.ui.listmenu.ListMenuItemWithSubmenuView>
