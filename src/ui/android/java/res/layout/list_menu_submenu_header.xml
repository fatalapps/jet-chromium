<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    style="@style/ListMenuItemStyle"
    android:contentDescription="@string/submenu_header_back">

    <ImageView
        android:id="@+id/submenu_arrow"
        android:src="@drawable/ic_arrow_back_24dp"
        android:importantForAccessibility="no"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        style="@style/ListMenuItemIconStyle.Start" />

    <TextView
        android:id="@+id/menu_row_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TextAppearance.ListMenuItem.Bold" />
</LinearLayout>
