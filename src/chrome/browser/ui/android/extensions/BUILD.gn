import("//build/config/android/config.gni")
import("//build/config/android/rules.gni")
import("//extensions/buildflags/buildflags.gni")
import("//third_party/jni_zero/jni_zero.gni")

android_library("java") {
  sources = [
    "java/src/org/chromium/chrome/browser/ui/extensions/ExtensionUi.java",
    "java/src/org/chromium/chrome/browser/ui/extensions/ExtensionUiBackend.java",
  ]
  srcjar_deps = [ ":generate_buildflags" ]

  deps = [
    "//base:base_java",
    "//base:lifetime_java",
    "//base:service_loader_java",
    "//chrome/browser/profiles/android:java",
    "//chrome/browser/tab:java",
    "//chrome/browser/tabmodel:java",
    "//chrome/browser/ui/android/theme:java",
    "//third_party/android_deps:material_design_java",
    "//ui/android:ui_full_java",
  ]

  if (enable_extensions_core) {
    deps += [
      ":java_resources",
      "//chrome/browser/flags:java",
      "//content/public/android:content_full_java",
      "//third_party/androidx:androidx_annotation_annotation_java",
      "//third_party/jni_zero:jni_zero_java",
    ]
    sources += [
      "java/src/org/chromium/chrome/browser/ui/extensions/ExtensionAction.java",
      "java/src/org/chromium/chrome/browser/ui/extensions/ExtensionActionPopupContents.java",
      "java/src/org/chromium/chrome/browser/ui/extensions/ExtensionActionsBridge.java",
      "java/src/org/chromium/chrome/browser/ui/extensions/ExtensionUiBackendImpl.java",
    ]
    srcjar_deps += [
      ":jni_headers",
      "//extensions/browser:extension_action_enums",
    ]
    resources_package = "org.chromium.chrome.browser.ui.extensions"
  }
}

if (enable_extensions_core) {
  generate_jni("jni_headers") {
    sources = [
      "java/src/org/chromium/chrome/browser/ui/extensions/ExtensionAction.java",
      "java/src/org/chromium/chrome/browser/ui/extensions/ExtensionActionPopupContents.java",
      "java/src/org/chromium/chrome/browser/ui/extensions/ExtensionActionsBridge.java",
    ]
  }
}

# Generate feature-specific flags to avoid dependency cycles with the main
# BuildConfig.
java_cpp_template("generate_buildflags") {
  sources = [ "java/templates/ExtensionsBuildflags.template" ]
  if (enable_desktop_android_extensions) {
    defines = [ "_ENABLE_DESKTOP_ANDROID_EXTENSIONS" ]
  }
}

android_library("test_support_java") {
  testonly = true
  sources = [
    "javatests/src/org/chromium/chrome/browser/ui/extensions/FakeExtensionUiBackend.java",
    "javatests/src/org/chromium/chrome/browser/ui/extensions/FakeExtensionUiBackendRule.java",
  ]
  deps = [
    ":java",
    "//base:base_java",
    "//chrome/browser/profiles/android:java",
    "//third_party/junit",
  ]

  if (enable_extensions_core) {
    sources += [
      "javatests/src/org/chromium/chrome/browser/ui/extensions/FakeExtensionActionsBridge.java",
      "javatests/src/org/chromium/chrome/browser/ui/extensions/FakeExtensionActionsBridgeRule.java",
    ]
    deps += [
      "//content/public/android:content_full_java",
      "//extensions/browser:extension_action_enums",
    ]
  }
}

if (enable_extensions_core) {
  robolectric_library("junit") {
    sources = [ "javatests/src/org/chromium/chrome/browser/ui/extensions/FakeExtensionActionsBridgeTest.java" ]

    deps = [
      ":java",
      ":java_resources",
      ":test_support_java",
      "//base:base_java",
      "//base:base_java_test_support",
      "//base:base_junit_test_support",
      "//chrome/browser/profiles/android:java",
      "//content/public/android:content_full_java",
      "//third_party/junit",
      "//third_party/mockito:mockito_java",
    ]
  }
}

android_resources("java_resources") {
  sources = [
    "java/res/drawable/chrome_extension.xml",
    "java/res/drawable/extensions_menu_bg_tinted.xml",
    "java/res/drawable/ic_close.xml",
    "java/res/drawable/ic_more_vert.xml",
    "java/res/drawable/ic_settings.xml",
    "java/res/drawable/ic_webstore.xml",
    "java/res/layout/extension_action_button.xml",
    "java/res/layout/extension_toolbar_container.xml",
    "java/res/layout/extensions_menu.xml",
    "java/res/layout/extensions_menu_footer.xml",
    "java/res/layout/extensions_menu_header.xml",
    "java/res/layout/extensions_menu_item.xml",
    "java/res/values/dimens.xml",
  ]

  deps = [
    "//chrome/app:java_strings_grd",
    "//chrome/browser/ui/android/strings:ui_strings_grd",
    "//chrome/browser/ui/android/theme:java_resources",
    "//components/browser_ui/styles/android:java_resources",
  ]
}
