  sources = [ "lens_region_search_controller_unittest.cc" ]
  deps = [
    "//base",
    "//base/test:test_support",
    "//chrome/browser/lens/region_search",
    "//chrome/browser/ui",
    "//chrome/browser/ui:ui_features",
    "//chrome/test:test_support",
    "//components/lens",
    "//components/lens:features",
    "//testing/gtest",
    "//ui/gfx",
    "//ui/gfx:test_support",
  ]
}
