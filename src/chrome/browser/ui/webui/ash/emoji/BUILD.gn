  sources = [
    "emoji_picker.mojom",
    "new_window_proxy.mojom",
  ]

  public_deps = [
    "//chromeos/ash/components/emoji:mojo_bindings",
    "//mojo/public/mojom/base",
    "//url/mojom:url_mojom_gurl",
  ]

  webui_module_path = "/"
}

